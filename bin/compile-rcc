#!/usr/bin/env poetry run python
import subprocess

from scripts.utils import REPO_ROOT


def compile_rcc() -> None:
    print("Compiling RCC...")
    subprocess.run(
        [
            'pyside-app-core-compile-rcc',
            'src/odc_commander',
            '--extra-resource-root', str(REPO_ROOT / "src" / "resources" / "odc"),
            '--debug'
        ],
        text=True,
    )


if __name__ == '__main__':
    compile_rcc()
